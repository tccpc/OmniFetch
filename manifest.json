{
  "manifest_version": 3,
  "name": "OmniFetch",
  "version": "1.0",
  "description": "Batch download static files (PDF, Images, Video, Audio, etc.) from any webpage.",
  "permissions": [
    "activeTab",
    "downloads",
    "contextMenus",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
